<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/holder_salle_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/holder_salle_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/holder_salle_list_check_image"
        app:layout_constraintLeft_toLeftOf="@+id/holder_salle_list_check_image"
        app:layout_constraintRight_toRightOf="@+id/holder_salle_list_check_image"
        app:layout_constraintTop_toTopOf="@+id/holder_salle_list_check_image"
        tool:text="Nom de la salle" />

    <ImageView
        android:id="@+id/holder_salle_list_check_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/ic_check_orange_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>